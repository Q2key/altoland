---
const images = [
  '/assets/h1.jpg', 
  '/assets/h2.jpg', 
  '/assets/h3.jpg', 
  '/assets/h4.jpg', 
  '/assets/h5.jpg', 
  '/assets/h6.jpg', 

  ];
---

<div class="relative w-full">
  <!-- Carousel Wrapper -->
  <div class="relative overflow-hidden">
    <div
      id="carousel"
      class="flex transition-transform duration-500 ease-in-out"
      style="width: 600%"
    >
      {
        images.map((image) => (
          <img src={image} alt="carousel image" class="h-auto w-full rounded-2xl" />
        ))
      }
    </div>
  </div>

  <!-- Left Arrow -->
  <button
    id="prev"
    class="hover:bg-gray-200 absolute left-4 top-1/2 z-10 -translate-y-1/2 transform rounded-full bg-transparent p-2"
  >
    <svg
      class="h-8 w-8 text-white"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="brown"
      stroke-width="3"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M15 18l-6-6 6-6"></path>
    </svg>
  </button>

  <!-- Right Arrow -->
  <button
    id="next"
    class="hover:bg-gray-200 absolute right-4 top-1/2 z-10 -translate-y-1/2 transform rounded-full bg-transparent p-2"
  >
    <svg
      class="h-8 w-8 text-white"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="brown"
      stroke-width="3"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M9 18l6-6-6-6"></path>
    </svg>
  </button>
</div>

<script>
  const carousel = document.getElementById('carousel');
  const prevBtn = document.getElementById('prev');
  const nextBtn = document.getElementById('next');
  const totalImages = 6;
  let currentIndex = 0;

  // Move to the previous image
  prevBtn.addEventListener('click', () => {
    currentIndex = (currentIndex - 1 + totalImages) % totalImages;
    carousel.style.transform = `translateX(-${(currentIndex * 100) / totalImages}%)`;
  });

  // Move to the next image
  nextBtn.addEventListener('click', () => {
    currentIndex = (currentIndex + 1) % totalImages;
    carousel.style.transform = `translateX(-${(currentIndex * 100) / totalImages}%)`;
  });

  // Touch events for swipe gestures (for mobile)
  let startX;
  let endX;

  carousel.addEventListener('touchstart', (e) => {
    startX = e.touches[0].clientX;
  });

  carousel.addEventListener('touchend', (e) => {
    endX = e.changedTouches[0].clientX;
    const diff = startX - endX;

    if (Math.abs(diff) > 50) {
      if (diff > 0) {
        nextBtn.click(); // Swipe left -> Next image
      } else {
        prevBtn.click(); // Swipe right -> Previous image
      }
    }
  });
</script>
